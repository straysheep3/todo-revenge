<div class="well well-sm">
  <% if todo_task.completed? %>
    <%= link_to complete_todo_list_todo_task_path(@todo_list, todo_task.id), method: :patch do %>
      <i class="fa fa-check"></i>
    <% end %>
    <strike><%= todo_task.task %></strike>
    <%= link_to todo_list_todo_task_path(@todo_list, todo_task.id), method: :delete, data: { confirm: "よろしい？" }  do %>
      <i class="fa fa-trash"></i>
    <% end %>

  <% else %>
    <%= link_to complete_todo_list_todo_task_path(@todo_list, todo_task.id), method: :patch do %>
      <i class="fa fa-check"></i>
    <% end %>
    <%= todo_task.task %>
    <%= link_to todo_list_todo_task_path(@todo_list, todo_task.id), method: :delete, data: { confirm: "よろしい？" }  do %>
      <i class="fa fa-trash"></i>
    <% end %>
  <% end %>
</div>
